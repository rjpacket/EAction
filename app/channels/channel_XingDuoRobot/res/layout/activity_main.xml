<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rjp.eaction.MainActivity"
    >
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00000000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/main_bg"
            >
            <LinearLayout
                android:id="@+id/ll_tab1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/selector_home_tab_bg"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_home_tab_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐读物"
                    android:textSize="12dp"
                    android:textColor="@drawable/selector_home_tab_text_color"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/selector_home_tab_bg"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_home_tab_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的书架"
                    android:textSize="12dp"
                    android:textColor="@drawable/selector_home_tab_text_color"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:id="@+id/ll_tab3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/selector_home_tab_bg"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_home_tab_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城"
                    android:textSize="12dp"
                    android:textColor="@drawable/selector_home_tab_text_color"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/selector_home_tab_bg"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_home_tab_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="12dp"
                    android:textColor="@drawable/selector_home_tab_text_color"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <com.rjp.eaction.ui.views.RatingCircleImageView
                android:id="@+id/rating_circle_image_view"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_home_read_book"
                />
    </RelativeLayout>
</LinearLayout>
