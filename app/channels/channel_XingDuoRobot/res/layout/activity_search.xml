<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root_view"
    tools:context="com.rjp.eaction.MainActivity"
    >

    <LinearLayout
            android:id="@+id/ll_search_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <LinearLayout
                android:id="@+id/ll_book_search_label"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="28dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/shape_bg_bg_1000dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

            <ImageView
                    android:id="@+id/iv_input_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_search"
                    />

            <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入关键字进行搜索"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/text_333333"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"
                android:textColor="@color/text_666666"
                />
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:id="@+id/ll_default_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    >
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="热搜"
                        android:textSize="16dp"
                        android:textColor="@color/text_000000"
                        />


            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/main_bg"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    >
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="历史记录"
                        android:textSize="16dp"
                        android:textColor="@color/text_000000"
                        />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_search_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
