<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送至"
                android:textColor="@color/text_666666"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                />

        <ImageView
                android:id="@+id/iv_close_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />

    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/select_address_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:tl_textSelectColor="@color/main_color"
            app:tl_textUnselectColor="@color/text_333333"
            app:tl_underline_height="1px"
            app:tl_underline_color="@color/line"
            app:tl_indicator_color="@color/main_color"
            app:tl_indicator_height="2dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_width="80dp"
            >

    </com.flyco.tablayout.CommonTabLayout>

    <FrameLayout
            android:id="@+id/city_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    </FrameLayout>
</LinearLayout>