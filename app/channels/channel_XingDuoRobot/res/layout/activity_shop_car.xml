<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rjp.eaction.MainActivity"
    >
    <LinearLayout
            android:id="@+id/ll_bottom_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"
                android:drawableLeft="@drawable/selector_shop_car_switch"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/text_000000"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="合计：￥9.90"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_000000"
                android:textSize="14dp"
                />

        <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="去结算(0)"
                android:gravity="center"
                android:background="@drawable/selector_yellow_yellow_0dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                />
    </LinearLayout>

    <com.rjp.eaction.ui.listviews.ShopCarListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom_label"
            >

    </com.rjp.eaction.ui.listviews.ShopCarListView>
</RelativeLayout>
