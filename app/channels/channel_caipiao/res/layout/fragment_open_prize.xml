<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rjp.eaction.ui.fragments.OpenPrizeFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_jczq_open_prize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/open_prize_football"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="竞彩足球"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/text_dark"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jclq_open_prize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/open_prize_basketball"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="竞彩篮球"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/text_dark"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zqdc_open_prize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/open_prize_dan_chang"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胜负过关"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/text_dark"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        />

    <com.rjp.eaction.ui.listviews.OpenPrizeListView
        android:id="@+id/open_prize_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </com.rjp.eaction.ui.listviews.OpenPrizeListView>
</LinearLayout>
