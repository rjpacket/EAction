<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_default_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_default_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_default_out</item>
    </style>

    <style name="dialog_fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <declare-styleable name="SettingView">
        <attr name="setting_icon" format="reference" />
        <attr name="setting_icon_visible" format="boolean" />
        <attr name="setting_name" format="string" />
        <attr name="setting_name_size" format="integer" />
        <attr name="setting_name_color" format="reference|color" />
        <attr name="setting_desc" format="string" />
        <attr name="setting_desc_size" format="integer" />
        <attr name="setting_desc_color" format="reference|color" />
    </declare-styleable>
</resources>
